[
  {
    "label":"Task Description",
    "name":"taskDescription",
    "type":"text",
    "maxLength":100,
    "default":"Use the alphabets below to guess the word, or click the hint to get a clue.",
    "description":"A guide telling the user how to solve this task.",
    "importance":"high"
  },
  {
    "name":"customKeys",
    "label":"Customize virtual keyboard.",
    "type":"boolean",
    "default":true
  },
  {
    "name":"keys",
    "type":"text",
    "label":"Custom keys",
    "widget":"showWhen",
    "showWhen":{
      "rules":[
        {
          "field":"customKeys",
          "equals":true
        }
      ]
    }
  },
  {
    "name":"categorySelectionList",
    "type":"list",
    "label":"Category List",
    "importance":"high",
    "entity":"category",
    "min":1,
    "field":{
      "name":"categorySelectionGroup",
      "type":"group",
      "isSubContent":true,
      "label":"Category",
      "importance":"high",
      "fields":[
        {
          "name":"categoryText",
          "description":"A category with a good range of words. Eg: Animals, we know a wide range of animals.",
          "type":"text",
          "maxLength":15,
          "label":"Enter Category",
          "regexp":{
            "pattern":"^(?!(?:.*[\"!#$%&./:;<=>?@\\[\\]^_`\\{|}~'()\\-*+\\d]|^[,])).*$"
          },
          "importance":"high"
        },
        {
          "name":"categoryWordList",
          "type":"list",
          "label":"Word List",
          "importance":"high",
          "entity":"Word",
          "min":1,
          "field":{
            "name":"wordHintGroup",
            "type":"group",
            "isSubContent":true,
            "label":"Text and Hints",
            "entity":"Word",
            "min":1,
            "importance":"high",
            "fields":[
              {
                "name":"word",
                "type":"text",
                "label":"Enter Word",
                "maxLength":30,
                "regexp":{
                  "pattern":"^(?!(?:.*[\"!#$%&./:;<=>?@\\[\\]^_`\\{|}~'()\\-*+\\d]|^[,])).*$"
                },
                "importance":"high"
              },
              {
                "label":"Hint Text",
                "name":"hintText",
                "maxLength":200,
                "type":"text",
                "optional":false,
                "description":"Input the hint here..."
              }
            ]
          }
        }
      ]
    }
  },
  {
    "name":"behaviour",
    "importance":"low",
    "type":"group",
    "label":"Behavioural settings.",
    "description":"These options will let you control how the task behaves.",
    "optional":true,
    "fields":[
      {
        "name":"showCorrectGuesses",
        "type":"boolean",
        "label":"Show Correct Guesses",
        "description":"Show the number of correct guesses made at the end of game",
        "importance":"low",
        "default":true
      }
    ]
  },
  {
    "label":"Localization",
    "importance":"low",
    "name":"l10n",
    "type":"group",
    "common":true,
    "fields":[
      {
        "label":"Text to show which category is chosen",
        "importance":"low",
        "name":"chosenCategory",
        "type":"text",
        "default":"The chosen category is "
      },
      {
        "label":"Guessed word : Display text",
        "importance":"low",
        "name":"guessedWord",
        "type":"text",
        "default":"Guessed Word"
      },
      {
        "label":"Number of attempts text",
        "importance":"low",
        "name":"attemptsText",
        "type":"text",
        "default":"attempts"
      },
      {
        "label":"Attempts Left text",
        "importance":"low",
        "name":"attemptsLeft",
        "type":"text",
        "default":"Attempts Left"
      },
      {
        "label":"Time Spent Text",
        "importance":"low",
        "name":"timeSpent",
        "type":"text",
        "default":"Time Spent"
      },
      {
        "label":"Feedback text",
        "importance":"low",
        "name":"score",
        "type":"text",
        "default":"You got @score of @total points",
        "description":"Feedback text, variables available: @score and @total. Example: 'You got @score of @total possible points'"
      },
      {
        "label":"Text for \"Start\" button",
        "importance":"low",
        "name":"startGame",
        "type":"text",
        "default":"Start Game"
      },
      {
        "label":"Text for \"Retry\" button",
        "importance":"low",
        "name":"playAgain",
        "type":"text",
        "default":"Play Again"
      },
      {
        "label":"Text for \"Hint\" button",
        "importance":"low",
        "name":"hint",
        "type":"text",
        "default":"Hint"
      },
      {
        "label":"Text for Hangman Title",
        "importance":"low",
        "name":"hangmanTitle",
        "type":"text",
        "default":"Hangman",
        "common":true,
        "maxLength":15
      },
      {
        "label":"Text for Success Message",
        "importance":"low",
        "name":"successMsg",
        "type":"text",
        "default":"You Won!",
        "maxLength":15
      },
      {
        "label":"Text for Lost Message",
        "importance":"low",
        "name":"lostMsg",
        "type":"text",
        "default":"You Lost!",
        "maxLength":15
      }
    ]
  }
]
